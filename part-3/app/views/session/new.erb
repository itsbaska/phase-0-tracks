<div class="center"><h3 class="login-title">Login</h3>

<% if @message %>
<p><%= @message %></p>
<% end %>

<form class="user-form" method="POST" action="/sessions">
  <input type="text" name="username" placeholder="Username">
  <input type="password" name="password" placeholder="Password">
  <input type="submit">
</form>
</div>
