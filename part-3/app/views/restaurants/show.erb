<h3><%= @restaurant.name %></h3>

<p><%= @restaurant.location %></p>

<%= erb :"reviews/index" %>

<% if logged_in? %>
<form class= "user-form" method="POST" action="/restaurants/<%= @restaurant.id %>/reviews">
  <%= erb :"partials/_review_form" %>
  </form
<% end %>


<% if authorized?(@restaurant.user) %>

<form method="POST" action="/restaurants/<%= @restaurant.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
<% end %>
